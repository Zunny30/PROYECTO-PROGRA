@page
@model PROYECTO_PROGRA.Pages.ContactModel
@{
    ViewData["Title"] = "Contacto";
}
<h2>Contacto</h2>

<form method="post">
    <div class="container-md row mt-4">
        <label for="CompanyName" class="p-0 form-label">Nombre completo de la empresa:</label>
        <input type="text" id="CompanyName" class="form-control" name="CompanyName" required placeholder="Ingrese el nombre de la empresa"/>
    </div>
    
    <div class="container-md  row mt-4">
        <label for="ContactName" class="p-0 form-label">Nombre del contacto:</label>
        <input type="text" id="ContactName" class="form-control" name="ContactName" required placeholder="Ingrese el nombre de contacto" />
    </div>

    <div class="container-md  row mt-4">
        <label for="Position" class="p-0 form-label">Cargo del contacto:</label>
        <input type="text" id="Position" class="form-control" name="Position" required placeholder="Ingrese el cargo del contacto" />
    </div>
    
    <div class="container-md  row mt-4">
        <label for="Email" class="p-0 form-label">Dirección de correo electrónico:</label>
        <input type="email" id="Email" class="form-control" name="Email" required placeholder="Ingrese el correo electronico" />
    </div>
    
    <div class="container-md  row mt-4">
        <label for="Phone" class="p-0 form-label">Número de teléfono:</label>
        <input type="tel" id="Phone" class="form-control" name="Phone" required placeholder="Ingrese el numero de telefono" />
    </div>
    
    <div class="container-md  row mt-4">
        <label for="Message" class="p-0 form-label">Mensaje o comentario adicional:</label>
        <textarea id="Message" class="form-control" name="Message"></textarea>
    </div>
    
    <div class="container-md  mt-4">
        <button type="button" class="btn btn-success" data-bs-dismiss="modal">Enviar</button>
    </div>
</form>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div> 
}




